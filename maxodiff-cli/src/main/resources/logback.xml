<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="pattern" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n"/>
    <logger name="de.charite.compbio.jannovar" level="WARN"/>
    <logger name="org.phenopackets.phenopackettools" level="WARN"/>
    <logger name="org.monarchinitiative.phenol" level="ERROR"/>
    <logger name="org.monarchinitiative.lirical.core.analysis" level="ERROR"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>